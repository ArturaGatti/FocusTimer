{
    
    "name": "focustimer-premium",
    "version": "2.0.0",
    "description": "Focus Timer with Premium Features",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "dist": "electron-builder --publish=never"
    },
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^22.0.0",
        "electron-builder": "^23.6.0"
    },
    "build": {
        "appId": "com.yourcompany.focustimer",
        "productName": "FocusTimer Premium",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!node_modules",
            "!dist"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
        
    }
  }